<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Statecharts Model Checking Category"
            id="visualization">
      </category>
      <view
            name="ModelDisp View"
            icon="icons/mc.png"
            category="visualization"
            class="visualization.views.ModelDispView"
            id="visualization.views.ModelDispView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="visualization.views.ModelDispView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

	<extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.jdt.core.IJavaElement"
            id="visualization.popup.actions.PopupMenus">
         <menu
               label="Statecharts Modeling"
               path="additions"
               id="visualization.popup.actions.PopupMenu1">
            <separator
                  name="group1">
            </separator>
         </menu>
          <action
               label="Model Checking"
               class="visualization.popup.actions.CheckAction"
               menubarPath="visualization.popup.actions.PopupMenu1/group1"
               enablesFor="1"
               id="visualization.popup.actions.CheckingAction">
         </action>
         <action
               label="Automatic Modeling"
               class="visualization.popup.actions.ModelingAction"
               menubarPath="visualization.popup.actions.PopupMenu1/group1"
               enablesFor="1"
               id="visualization.popup.actions.ModelingAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="visualization.commands.ModelingCommandHandler"
            id="visualization.commands.ModelingCommand"
            name="ModelChecking">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="ModelingToolBar">
            <command
                  commandId="visualization.commands.ModelingCommand"
                  icon="icons/mc.png"
                  style="push"
                  tooltip="Start Modeling">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="ModelingMenu"
               label="Statecharts Modeling">
            <command
                  commandId="visualization.commands.ModelingCommand"
                  icon="icons/mc.png"
                  label="Modeling"
                  style="push"
                  tooltip="Start Modeling">
            </command>
         </menu>
      </menuContribution>
   </extension>
   
</plugin>
